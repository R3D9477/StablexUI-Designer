<?xml version="1.0" encoding="UTF-8"?>
<Floating
	on-create="var wgt = $Suid.castType($this, $Widget); wgt.w = $Suid.getSettings(wgt.name).guiWidth; wgt.h = $Suid.getSettings(wgt.name).guiHeight;">
	<VBox
		defaults="'Default, ChildWindow'">
		<HBox
			defaults="'Default, ChildWindowHeader'">
			<Widget/>
			<Button
				defaults="'Default, ChildWindowClose'"
				on-click="$Suid.castType($Suid.castType($this, $Button).parent.parent.parent, $Floating).hide();"/>
		</HBox>
		<GuiElements/>
	</VBox>
</Floating>
