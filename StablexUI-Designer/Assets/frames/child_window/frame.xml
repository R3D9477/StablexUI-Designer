<?xml version="1.0" encoding="UTF-8"?>
<Floating
	on-create="
		var wgt = $Suid.castType($this, ru.stablex.ui.widgets.Widget);
		wgt.w = $Suid.getSettings(wgt.name).guiWidth;
		wgt.h = $Suid.getSettings(wgt.name).guiHeight;">
	<VBox
		defaults="'Default,ChildWindow'">
		<HBox
			defaults="'Default,ChildWindowHeader'">
			<Widget/>
			<Button
				defaults="'Default,ChildWindowClose'"
				on-click="$Suid.castType($Suid.castType($this, ru.stablex.ui.widgets.Button).parent.parent.parent, ru.stablex.ui.widgets.Floating).hide();"/>
		</HBox>
		<GuiElements/>
	</VBox>
</Floating>
