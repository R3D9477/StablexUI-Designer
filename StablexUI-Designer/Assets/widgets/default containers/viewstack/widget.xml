<?xml version="1.0" encoding="UTF-8"?>
<ViewStack
	left="0"
	top="0"
	w="100"
	h="100">
	<VBox padding="5">
		<Button
			text="'Next'"
			on-click="
				var trans = new $Fade();
				trans.duration = 0.25;
				$this.parent.parent.trans = trans;
				$this.parent.parent.show($this.parent.parent.getChildAt(1).name);"/>
	</VBox>
	<VBox padding="5">
		<Button
			text="'Back'"
			on-click="
				var trans = new $Fade();
				trans.duration = 0.25;
				$this.parent.parent.trans = trans;
				$this.parent.parent.show($this.parent.parent.getChildAt(0).name);"/>
	</VBox>
</ViewStack>
