<?xml version="1.0" encoding="UTF-8"?>
<HBox
	skin:Paint-border="1"
	skin:Paint-borderColor="0x000000"
	skin:Paint-color="0xC0C0C0"
	layout:Column-cols="[0, 0, 0, -1]"
	layout:Column-paddingLeft="5"
	layout:Column-paddingTop="2"
	layout:Column-paddingBottom="2">
	<Button
		name="'newGuiBtn'"
		tabEnabled="false"
		label-visible="false"
		ico-src="'graphics/tools/new.png'"
		tip:Tip-text="'Create New Gui'"
		skin:Paint-color="0xC0C0C0" />
	<Button
		name="'loadGuiBtn'"
		tabEnabled="false"
		label-visible="false"
		ico-src="'graphics/tools/load.png'"
		tip:Tip-text="'Load Gui from File'"
		skin:Paint-color="0xC0C0C0" />
	<Button
		name="'saveGuiBtn'"
		tabEnabled="false"
		label-visible="false"
		ico-src="'graphics/tools/save.png'"
		tip:Tip-text="'Save Gui to File'"
		skin:Paint-color="0xC0C0C0" />
	<Widget />
</HBox>
